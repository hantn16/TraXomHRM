@model TraXomHRM.Areas.Admin.Models.DataModel.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Chi Tiết Phòng Ban</h3>
        <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </div>
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DepartmentId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>

            <dt>
                Trực thuộc
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ParentDepartment.DepartmentName)
            </dd>
            <dt>Người đứng đầu</dt>
            <dd>@Html.DisplayFor(c => c.Leader.EmployeeName)</dd>
        </dl>
    </div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DepartmentId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
/</div>
