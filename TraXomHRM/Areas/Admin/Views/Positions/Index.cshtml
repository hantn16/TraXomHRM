@model IEnumerable<TraXomHRM.Areas.Admin.Models.DataModel.Position>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-responsive table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PositionCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllowanceRate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PositionCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllowanceRate)
        </td>
        <td>
            <a href="~/Admin/Positions/Edit/@item.PositionId" id="@item.PositionId"><i class="fa fa-pencil-square-o"></i></a>
            <a href="~/Admin/Positions/Details/@item.PositionId" id="@item.PositionId"><i class="fa fa-search"></i></a>
            <a href="~/Admin/Positions/Delete/@item.PositionId" id="@item.PositionId"><i class="fa  fa-remove"></i></a> 
        </td>
    </tr>
}

</table>
